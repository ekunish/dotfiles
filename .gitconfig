# Git configuration
[user]
	name = ekunish
	email = ekunish@gmail.com

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f

# delta (git diff pager)
[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	side-by-side = true
	line-numbers = true
	syntax-theme = Catppuccin Mocha

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default
